{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "types": [
      "@intlify/unplugin-vue-i18n/messages",
      "vue3-toastify/global"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}
